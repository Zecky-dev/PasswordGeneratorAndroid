<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FCFCFF">

    <ImageButton
        android:id="@+id/closeDialogBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        app:layout_constraintTop_toTopOf="@id/successGif"
        app:layout_constraintRight_toRightOf="@id/successGif"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/successGif"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/success"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/dialogTextTW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/copied_to_clipboard_dialog_text"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/successGif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="24sp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>